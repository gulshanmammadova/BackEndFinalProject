@model Category
@{
    ViewData["Title"] = "Detail";
    int count = 0;
}
<div class="container mt-5 ms-4">
    <div class="row">
        <div class="col-lg-10">
            <h1 class="h3 mb-4 text-gray-800">Category Detail Page</h1>
        </div>
        <div class="col-lg-2">
            <a class="btn btn-primary" asp-action="index" asp-controller="category" asp-area="manage"> Go To Home</a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="card mx-3" style="width: 18rem;background-color:black;">
                <div class="card-body">
                    @if (Model.Image != null)
                    {
                        <img class="card-img-top mb-2" src="~/assets/img/category/@Model.Image" />
                    }
                    <h5 class="card-title mx-2">Name: @Model.Name</h5>
                    <div class="card-title">
                        <p>
                            @Model.Description
                        </p>
                    </div>
                </div>
              
            </div>
        </div>
    </div>
    @if (Model.Products != null && Model.Products.Count() > 0)
    {
        <div class=" row my-4 ms-4" >
            <h4>Products</h4>
            <div class="col-lg-12">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Created At</th>
                            <th>Created By</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product product in Model.Products)
                        {
                            <tr>
                                <td>@product.Title</td>
                                <td>@product.CreatedAt?.ToString("dd-MMM-yyyy")</td>
                                <td>@product.CreatedBy</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div> 