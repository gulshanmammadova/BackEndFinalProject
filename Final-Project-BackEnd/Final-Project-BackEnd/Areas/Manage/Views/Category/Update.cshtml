@model Category

@{
    ViewData["Title"] = "Update";
 }
<div class="container mt-5 ms-2">
<div class="row ms-2">
    <div class="col-lg-10">
        <h1 class="h3 mb-4 text-gray-800">Category Update Page</h1>
    </div>
</div>
<div class=" row ms-2">
    <div class="col-lg-8">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" style="background-color:white;">
                <span asp-validation-for="Name" class="text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" style="background-color:white;">
                <span asp-validation-for="Name" class="text text-danger"></span>
            </div>
            <div  class="mb-3 ">
                <label asp-for="File" class="form-label"></label>
                <input asp-for="File" class="form-control" accept="image/jpeg" style="background-color:white;">
                <span asp-validation-for="File" class="text text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

</div>
@section Scripts{
    @await Html.PartialAsync("_Validation")
}